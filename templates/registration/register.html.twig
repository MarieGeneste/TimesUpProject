{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<section class="page-section authentication d-flex align-items-center" id="authentication">
    <div class="container d-flex flex-column jumbotron col-white">

        <h1>S'inscrire</h1>

        {{ form_start(registrationForm) }}
        <div class="row mt-4 mb-4">
            <div class="col-md-6 mt-4 mb-4">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="col-md-6 mt-4 mb-4">
                {{ form_row(registrationForm.username) }}
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-md-6 mt-4 mb-4">
                {{ form_row(registrationForm.plain_password) }}
            </div>
            <div class="col-md-6 mt-4 mb-4">
                {{ form_row(registrationForm.confirm_password) }}
            </div>
        </div>
        <div class="row m-4 form-group d-flex justify-content-center">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <div class="row m-4 form-group d-flex justify-content-center">
                <button class="btn btn-lg btn-primary mt-4">
                    S'inscrire
                </button>
        </div>
        {{ form_end(registrationForm) }}
    </div>

</section>
{% endblock %}
