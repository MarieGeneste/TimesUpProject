        <nav class="navbar bg-secondary text-uppercase fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="{{ path('home') }}">Visio Game Party !</a>
                <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    {{ app.user.username }}
                    <i class="ml-2 fas fa-bars"></i>
                </button>
    {% else %}
        <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="{{ path('home') }}">Visio Game Party !</a>
                <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold text-white rounded">
                    <a class="text-white font-weight-bold" href="{{ path('app_login') }}" id="connexion">Connexion</a>
                </button>
    {% endif %}
                <div class="collapse navbar-collapse text-center" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                    {% if app.user %}
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link p-3 rounded js-scroll-trigger" href="#portfolio">Scores</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="bg-warning col-red nav-link p-3 rounded js-scroll-trigger" onclick="return confirm('Etes-vous sûre de vouloir vous déconnecter ?')" href="{{ path('app_logout') }}" id="connexion">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ path('app_login') }}" id="connexion">Connexion</a>
                        </li>
                    {% endif %}
                    
                    {# <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">Contact</a>
                    </li> #}
                    </ul>
                </div>
                </div>
            </nav>

            <div class="container-fluid pr-0 pl-0" id="front_content">
                {% block body %}{% endblock %}
                {% block javascripts %}{% endblock %}
            </div>

            <!-- Copyright Section -->
            <footer class="copyright py-4 text-center text-white">
                <div class="container">
                <small>Copyright &copy; By Miss Libellule</small>
                </div>
            </footer>

            <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
            <div class="scroll-to-top d-lg-none position-fixed ">
                <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
                <i class="fa fa-chevron-up"></i>
                </a>
            </div>
