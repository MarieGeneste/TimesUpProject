{% extends 'adminBase.html.twig' %}

{% block title %} - {{ pageModTitle }} d'une Carte{% endblock %}

{% block body %}

    <h1 class="pageTitle mb-4 text-center">{{ pageModTitle }} d'une Carte</h1>

    <div class="d-flex flex-column flex-wrap m-2 mt-4 row">
        {% if pageModTitle == "Création" %}
            {{ form_start(cardForm, {'action': path('add_card')} )}}
        {% else %}
            {{ form_start(cardForm, {'action': path('edit_card', {'id' : card.id }) }) }}
        {% endif %}

            <div class="row mt-4 mb-4">
                <div class="col-md-6 mt-4">
                    {{ form_row(cardForm.edition, {'attr': {'class': 'selectpicker'})}}
                </div>
            </div>

            <div class="row mt-4 mb-4 form-group" id="yellow_card">
                <legend class="col-form-label required">Coté jaune</legend>
                <div class="form-group col-md-6 mt-4">
                    <label for="yellow_card_name" class="required">Name</label>
                    <input type="text" id="yellow_card_name" name="card[yellowContent][name]" autofocus="autofocus" required="required" maxlength="255" class="form-control" />
                </div>
                <div class="form-group col-md-6 mt-4">
                    <label for="yellow_card_category" class="col-12">Catégorie(s)</label>
                    <select id="yellow_card_category" name="card[yellowContent][category]" data-width="100%" class="selectpicker" data-live-search="true" data-size="auto" multiple data-selected-text-format="count > 3" title="Rattacher une ou des catégories">
                        {% for category in allCategories %}
                            <option  style="background: {{ category.color }}; color: #fff;" value="{{ category.id }}">{{ category.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label for="yellow_card_description">Description</label>
                    <textarea id="yellow_card_description" name="card[yellowContent][description]" maxlength="255" class="form-control" /></textarea>
                </div>
            </div>

            <div class="row mt-4 mb-4 form-group" id="blue_card">
                <legend class="col-form-label required">Coté bleu</legend>
                <div class="form-group col-md-6 mt-4">
                    <label for="blue_card_name" class="required">Name</label>
                    <input type="text" id="blue_card_name" name="card[blueContent][name]" required="required" maxlength="255" class="form-control" />
                </div>
                <div class="form-group col-md-6 mt-4">
                    <label for="blue_card_category" class="col-12">Catégorie(s)</label>
                    <select id="blue_card_category" name="card[blueContent][category]" data-width="100%" class="selectpicker" data-live-search="true" data-size="auto" multiple data-selected-text-format="count > 3" title="Rattacher une ou des catégories">
                        {% for category in allCategories %}
                            <option  style="background: {{ category.color }}; color: #fff;" value="{{ category.id }}">{{ category.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label for="blue_card_description">Description</label>
                    <textarea id="blue_card_description" name="card[blueContent][description]" maxlength="255" class="form-control" /></textarea>
                </div>
            </div>
            <div class="row mt-4 mb-4 form-group d-flex justify-content-center " id="blue_card">
                {% if pageModTitle == "Création" %}
                    <input type="submit" class="btn btn-primary btn-lg" value="Créer">
                {% else %}
                    <input type="submit" class="btn btn-primary btn-lg" value="Editer">
                {% endif %}
            </div>

        {{ form_end(cardForm)}}
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{asset('JS/category.js')}}"></script>
{% endblock %}