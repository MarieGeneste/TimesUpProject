{# Gestion des messages d'alert #}


<div class="row connection-alert">

        {# {% if loginError is defined and loginError %}
            <div class="col s6 offset-s3 mb-40">
                <div class="alert danger-border" role="alert">
                    <i class="fa fa-times-circle"></i>
                    Probl√®me de connexion : <strong> {{ loginError.messageKey | trans(loginError.messagedata, 'security') }}</strong>
                </div>
            </div>

        {% endif %}
         #}

        {% for alert_message in app.flashes('success')%}
        <div class="alert alert-success alert-dismissible fade show text-center w-100 mt-2" role="alert">
            {{ alert_message|raw }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endfor %}

        {% for alert_message in app.flashes('error')%}
        <div class="alert alert-danger alert-dismissible fade show text-center w-100 mt-2" role="alert">
            {{ alert_message|raw }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endfor %}

        {% for alert_message in app.flashes('warning')%}
        <div class="alert alert-warning alert-dismissible fade show text-center w-100 mt-2" role="alert">
            {{ alert_message|raw }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endfor %}

</div>